---
import HamburgerIcon from "./icons/Hamburger.astro";
---

<style>
  ul {
    width: 100px;
    margin: 0;
    padding: 0;
    list-style: none;
    position: relative;
    flex-wrap: wrap;
    color: color-mix(in lch, canvasText 50%, canvas);
    transition: color 0.2s;
    touch-action: none;
  }

  li a {
    display: inline-block;
    padding: 0.5rem 1.25rem;
    color: currentColor;
    text-decoration: none;
  }

  a {
    display: flex;
    width: 80px;
    align-items: center;
    padding: 0.5rem 1rem;
    background-color: rgb(243 244 246);
    text-decoration: none;
    color: black;
    border-radius: 9999px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  nav {
    display: grid;
    gap: 10px;
    position: fixed;
    bottom: 80px;
    right: 20px;
    z-index: 1000;
  }

  .hidden {
    display: none;
  }

  .hamburger {
    position: fixed;
    color: black;
    bottom: 20px;
    right: 20px;
    border: none;
    border-radius: 50%;
    padding: 15px;
    font-size: 18px;
    cursor: pointer;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    display: flex;
  }
</style>

<button class="hamburger"><HamburgerIcon /></button>

<nav class="hidden">
  <a href="/" id="home">Home</a>
  <a href="/about" id="about">About</a>
  <a href="/blog" id="blog">Blog</a>
</nav>

<script>
  import "../scripts/menu.js";
</script>
